@startuml Health Dashboard Architecture
!theme plain
skinparam backgroundColor transparent
skinparam defaultFontSize 14
skinparam componentStyle rectangle
skinparam padding 5
skinparam nodesep 30
skinparam ranksep 40
skinparam ArrowColor white
skinparam ArrowFontColor white

' Compact styling for poster
skinparam component {
    BackgroundColor #2196F3
    BorderColor #1565C0
    FontColor white
    FontStyle bold
}

skinparam database {
    BackgroundColor #4CAF50
    BorderColor #2E7D32
    FontColor white
}

skinparam cloud {
    BackgroundColor #FF9800
    BorderColor #EF6C00
    FontColor white
}

skinparam rectangle {
    BackgroundColor #9C27B0
    BorderColor #6A1B9A
    FontColor white
}

title <b>Web Bluetooth Medical Dashboard</b>\nSystem Architecture

' --- Devices Layer ---
rectangle "Health Devices" as devices #E8EAF6 {
    component "Heart Rate\nMonitor" as hrm #E91E63
    component "Thermometer" as therm #00BCD4
    component "Apple Watch\n(HealthKit)" as watch #333333
}

' --- Client Layer ---
rectangle "Web Browser" as browser #FFF3E0 {
    component "Web Bluetooth\nAPI" as wbapi #FF5722
    component "Dashboard UI\n(Razor + jQuery)" as ui #3F51B5
}

' --- Server Layer ---
rectangle "ASP.NET Core 8" as server #E3F2FD {
    component "MVC\nControllers" as mvc #1976D2
    component "Health Data\nService" as service #0288D1
    component "REST API\n(Watch Sync)" as api #0097A7
}

' --- Data Layer ---
database "SQLite\n+ Identity" as db #388E3C

' --- Connections ---
hrm -down-> wbapi : BLE
therm -down-> wbapi : BLE
watch -down-> api : HTTPS\n(JSON)

wbapi -down-> ui : Real-time\nData
ui <-down-> mvc : HTTP/AJAX
mvc <-> service
api <-> service
service -down-> db : EF Core\n(LINQ)

@enduml
