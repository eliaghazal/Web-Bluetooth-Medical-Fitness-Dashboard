@model HealthDashboard.Models.HealthDashboardViewModel
@{
    ViewData["Title"] = "Health Dashboard";
}

@* 
    HOME DASHBOARD - Medical/Fitness Data Display
    
    Concepts Used (from syllabus):
    - Razor: @Model, @foreach, @if
    - Bootstrap Grid: container, row, col-md-*
    - HTML Tables: thead, tbody, tr, td
    - jQuery button events
*@

<div class="container-fluid">
    
    <!-- Page Header -->
    <div class="row mb-4">
        <div class="col-12 text-center">
            <h1 class="display-5 fw-bold text-primary">
                <i class="fas fa-heartbeat me-2"></i>Medical/Fitness Dashboard
            </h1>
            <p class="lead text-muted">Real-time health monitoring with Web Bluetooth technology</p>
        </div>
    </div>

    <!-- Web Bluetooth Device Connection -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0"><i class="fab fa-bluetooth-b me-2"></i>Web Bluetooth Devices</h4>
                </div>
                <div class="card-body">
                    <div class="row g-2 mb-3">
                        <div class="col-md-3">
                            <button type="button" class="btn btn-success w-100" id="connectHeartRate">
                                <i class="fas fa-heart me-1"></i> Heart Rate Monitor
                            </button>
                        </div>
                        <div class="col-md-3">
                            <button type="button" class="btn btn-info w-100" id="connectThermometer">
                                <i class="fas fa-thermometer-half me-1"></i> Thermometer
                            </button>
                        </div>
                        <div class="col-md-3">
                            <button type="button" class="btn btn-warning w-100" id="connectESP32">
                                <i class="fas fa-microchip me-1"></i> ESP32 Device
                            </button>
                        </div>
                        <div class="col-md-3">
                            <button type="button" class="btn btn-danger w-100" id="disconnectAll">
                                <i class="fas fa-times me-1"></i> Disconnect All
                            </button>
                        </div>
                    </div>
                    <div id="connectionStatus" class="alert alert-info mb-0">
                        <i class="fas fa-info-circle me-2"></i>
                        No devices connected. Click a button above to connect via Web Bluetooth.
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Live Data Display -->
    <div class="row mb-4">
        <div class="col-md-4">
            <div class="card shadow stat-card text-center">
                <div class="card-body">
                    <i class="fas fa-heartbeat fa-2x text-danger mb-2"></i>
                    <h5>Heart Rate</h5>
                    <h2 id="heartRateValue" class="display-4 text-danger fw-bold">--</h2>
                    <p class="text-muted mb-0">BPM</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card shadow stat-card text-center">
                <div class="card-body">
                    <i class="fas fa-thermometer-half fa-2x text-warning mb-2"></i>
                    <h5>Temperature</h5>
                    <h2 id="temperatureValue" class="display-4 text-warning fw-bold">--</h2>
                    <p class="text-muted mb-0">°C</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card shadow stat-card text-center">
                <div class="card-body">
                    <i class="fas fa-microchip fa-2x text-info mb-2"></i>
                    <h5>ESP32 Sensor</h5>
                    <h2 id="esp32Value" class="display-4 text-info fw-bold">--</h2>
                    <p class="text-muted mb-0">Units</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Statistics (LINQ) -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card shadow">
                <div class="card-header bg-success text-white">
                    <h4 class="mb-0"><i class="fas fa-chart-bar me-2"></i>Statistics (LINQ Aggregations)</h4>
                </div>
                <div class="card-body">
                    <div class="row text-center">
                        <div class="col-md-3">
                            <div class="p-3 bg-light rounded">
                                <h3 class="text-primary mb-0">@Model.TotalReadings</h3>
                                <small class="text-muted">Total Readings</small>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="p-3 bg-light rounded">
                                <h3 class="text-success mb-0">@Model.ReadingsByDevice.Count</h3>
                                <small class="text-muted">Connected Devices</small>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="p-3 bg-light rounded">
                                <h3 class="text-info mb-0">@(Model.LastReadingTime?.ToString("HH:mm:ss") ?? "--")</h3>
                                <small class="text-muted">Last Reading</small>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="p-3 bg-light rounded">
                                <h3 class="text-warning mb-0">@Model.AveragesByType.Count</h3>
                                <small class="text-muted">Device Types</small>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Averages by Type (LINQ GroupBy) -->
    @if (Model.AveragesByType.Any())
    {
        <div class="row mb-4">
            <div class="col-12">
                <div class="card shadow">
                    <div class="card-header bg-info text-white">
                        <h4 class="mb-0"><i class="fas fa-calculator me-2"></i>Averages by Type (LINQ GroupBy)</h4>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            @foreach (var avg in Model.AveragesByType)
                            {
                                <div class="col-md-4 mb-3">
                                    <div class="card h-100">
                                        <div class="card-body text-center">
                                            <h5 class="text-primary">@avg.Key</h5>
                                            <h2 class="fw-bold">@avg.Value.ToString("F2")</h2>
                                            <small class="text-muted">Average Value</small>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }

    <!-- Recent Readings Table -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card shadow">
                <div class="card-header bg-dark text-white">
                    <h4 class="mb-0"><i class="fas fa-table me-2"></i>Recent Readings</h4>
                </div>
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-striped table-hover mb-0" id="readingsTable">
                            <thead class="table-dark">
                                <tr>
                                    <th>Timestamp</th>
                                    <th>Device Type</th>
                                    <th>Device ID</th>
                                    <th>Value</th>
                                    <th>Unit</th>
                                    <th>Notes</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var reading in Model.RecentReadings)
                                {
                                    <tr>
                                        <td>@reading.Timestamp.ToString("yyyy-MM-dd HH:mm:ss")</td>
                                        <td><span class="badge bg-primary">@reading.DeviceType</span></td>
                                        <td><code>@reading.DeviceId</code></td>
                                        <td><strong>@reading.Value.ToString("F2")</strong></td>
                                        <td>@reading.Unit</td>
                                        <td>@reading.Notes</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Data Export -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card shadow">
                <div class="card-header bg-secondary text-white">
                    <h4 class="mb-0"><i class="fas fa-download me-2"></i>Export Data</h4>
                </div>
                <div class="card-body">
                    <div class="row g-2">
                        <div class="col-md-3">
                            <a href="/Health/ExportJson" class="btn btn-primary w-100" target="_blank">
                                <i class="fas fa-file-code me-1"></i> Export JSON
                            </a>
                        </div>
                        <div class="col-md-3">
                            <a href="/Health/ExportXml" class="btn btn-success w-100" target="_blank">
                                <i class="fas fa-file-alt me-1"></i> Export XML
                            </a>
                        </div>
                        <div class="col-md-3">
                            <button type="button" class="btn btn-warning w-100" id="loadAnalytics">
                                <i class="fas fa-chart-line me-1"></i> Analytics
                            </button>
                        </div>
                        <div class="col-md-3">
                            <button type="button" class="btn btn-danger w-100" id="clearData">
                                <i class="fas fa-trash me-1"></i> Clear All
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Scripts -->
<script src="~/js/web-bluetooth.js"></script>
<script src="~/js/dashboard.js"></script>
