@model HealthDashboard.Models.HealthDashboardViewModel
@{
    ViewData["Title"] = "Health Data";
}

@* 
    HEALTH DATA PAGE - Simplified for Academic Presentation
    
    Concepts Used (from syllabus):
    - Razor syntax: @Model, @ViewBag, @foreach, @if
    - Bootstrap Grid: row, col-md-*
    - HTML Tables with <thead>, <tbody>, <tr>, <td>
    - LINQ results displayed from Controller
    
    Self-Study Topics (can explain if asked):
    - ViewBag = dynamic object to pass extra data from Controller to View
    - Model.Property = strongly-typed access to ViewModel properties
*@

<div class="container-fluid">
    
    <!-- Page Title -->
    <div class="row">
        <div class="col-12">
            <h1 class="text-center mb-4">Health Data Management</h1>
        </div>
    </div>

    <!-- Session State Display (Syllabus: Server-Based State) -->
    <div class="row mb-3">
        <div class="col-12">
            <div class="alert alert-info">
                <strong>@ViewBag.WelcomeMessage</strong> | 
                Last Visit: @ViewBag.LastVisit
                <br />
                <small class="text-muted">This uses HttpContext.Session (Server-Based State)</small>
            </div>
        </div>
    </div>

    <!-- Quick Statistics Cards -->
    <div class="row mb-4">
        <!-- Total Records Card -->
        <div class="col-md-3">
            <div class="card shadow text-center">
                <div class="card-body">
                    <h5>Total Records</h5>
                    <h2 class="text-primary">@Model.TotalReadings</h2>
                </div>
            </div>
        </div>
        
        <!-- Average Heart Rate Card (LINQ Average) -->
        <div class="col-md-3">
            <div class="card shadow text-center">
                <div class="card-body">
                    <h5>Avg Heart Rate</h5>
                    <!-- This value is calculated using LINQ .Average() in Controller -->
                    <h2 class="text-danger">@ViewBag.AverageHeartRate <small>BPM</small></h2>
                </div>
            </div>
        </div>
        
        <!-- Device Types Card -->
        <div class="col-md-3">
            <div class="card shadow text-center">
                <div class="card-body">
                    <h5>Device Types</h5>
                    <h2 class="text-success">@Model.AveragesByType.Count</h2>
                </div>
            </div>
        </div>
        
        <!-- Last Update Card -->
        <div class="col-md-3">
            <div class="card shadow text-center">
                <div class="card-body">
                    <h5>Last Update</h5>
                    <h4>@(Model.LastReadingTime?.ToString("HH:mm:ss") ?? "No data")</h4>
                </div>
            </div>
        </div>
    </div>

    <!-- BMI Calculator - jQuery AJAX to PHP (Syllabus Requirement) -->
    <div class="row mb-4">
        <div class="col-md-6">
            <div class="card shadow">
                <div class="card-header bg-success text-white">
                    <h4>BMI Calculator (PHP Backend)</h4>
                </div>
                <div class="card-body">
                    <p class="text-muted">
                        This form sends data to <code>health-processor.php</code> using jQuery AJAX.
                        PHP receives data via <code>$_POST</code> and returns JSON.
                    </p>
                    
                    <!-- BMI Form -->
                    <div class="row">
                        <div class="col-md-5">
                            <label for="weight" class="form-label">Weight (kg)</label>
                            <input type="number" class="form-control" id="weight" placeholder="e.g., 70" step="0.1" />
                        </div>
                        <div class="col-md-3">
                            <label for="height" class="form-label">Height</label>
                            <input type="number" class="form-control" id="height" placeholder="e.g., 175" step="0.01" />
                        </div>
                        <div class="col-md-2">
                            <label for="heightUnit" class="form-label">Unit</label>
                            <select id="heightUnit" class="form-select">
                                <option value="cm" selected>cm</option>
                                <option value="m">meters</option>
                            </select>
                        </div>
                        <div class="col-md-2 d-flex align-items-end">
                            <button id="calculateBmi" class="btn btn-success w-100">Calculate</button>
                        </div>
                    </div>
                    
                    <!-- BMI Result Display -->
                    <div id="bmiResult" class="mt-3"></div>
                </div>
            </div>
        </div>
        
        <!-- LINQ Aggregation Stats Card -->
        <div class="col-md-6">
            <div class="card shadow">
                <div class="card-header bg-info text-white">
                    <h4>LINQ Aggregation Stats</h4>
                </div>
                <div class="card-body">
                    <p class="text-muted">
                        These values are calculated using LINQ in the Controller:
                        <code>.Average()</code>, <code>.Max()</code>, <code>.Min()</code>
                    </p>
                    
                    <!-- Stats Table -->
                    <table class="table table-bordered">
                        <tr>
                            <td>Average Heart Rate</td>
                            <td><strong>@ViewBag.AverageHeartRate BPM</strong></td>
                        </tr>
                        <tr>
                            <td>Maximum Value</td>
                            <td><strong>@ViewBag.MaxValue</strong></td>
                        </tr>
                        <tr>
                            <td>Minimum Value</td>
                            <td><strong>@ViewBag.MinValue</strong></td>
                        </tr>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <!-- Readings Grouped by Device (LINQ GroupBy) -->
    @if (Model.ReadingsByDevice.Any())
    {
        <div class="row mb-4">
            <div class="col-12">
                <div class="card shadow">
                    <div class="card-header bg-primary text-white">
                        <h3>Readings Grouped by Device (LINQ GroupBy)</h3>
                    </div>
                    <div class="card-body">
                        
                        <!-- Loop through each device group -->
                        @foreach (var deviceGroup in Model.ReadingsByDevice)
                        {
                            <div class="mb-4">
                                <h4 class="text-primary">
                                    Device: @deviceGroup.Key
                                    <span class="badge bg-secondary">@deviceGroup.Value.Count readings</span>
                                </h4>
                                
                                <!-- Table of readings for this device -->
                                <table class="table table-hover table-sm">
                                    <thead class="table-dark">
                                        <tr>
                                            <th>Timestamp</th>
                                            <th>Type</th>
                                            <th>Value</th>
                                            <th>Unit</th>
                                            <th>Notes</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var reading in deviceGroup.Value.Take(5))
                                        {
                                            <tr>
                                                <td>@reading.Timestamp.ToString("yyyy-MM-dd HH:mm:ss")</td>
                                                <td><span class="badge bg-info">@reading.DeviceType</span></td>
                                                <td><strong>@reading.Value.ToString("F2")</strong></td>
                                                <td>@reading.Unit</td>
                                                <td>@reading.Notes</td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    }

    <!-- All Readings Table -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card shadow">
                <div class="card-header bg-dark text-white">
                    <h3>All Health Readings</h3>
                </div>
                <div class="card-body">
                    <table class="table table-striped table-hover" id="allReadingsTable">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Timestamp</th>
                                <th>Device ID</th>
                                <th>Device Type</th>
                                <th>Value</th>
                                <th>Unit</th>
                                <th>Notes</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var reading in Model.RecentReadings)
                            {
                                <tr>
                                    <td>@reading.Id</td>
                                    <td>@reading.Timestamp.ToString("yyyy-MM-dd HH:mm:ss")</td>
                                    <td><code>@reading.DeviceId</code></td>
                                    <td><span class="badge bg-primary">@reading.DeviceType</span></td>
                                    <td><strong>@reading.Value.ToString("F2")</strong></td>
                                    <td>@reading.Unit</td>
                                    <td>@reading.Notes</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <!-- Load AFTER jQuery from _Layout.cshtml -->
    <script src="~/js/health-data.js"></script>
}
